<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col m3">
		<div class="collection">
	       <%  @videos.each do |video| %>
	       	<%= link_to video.title, video, :class => "collection-item" %>
	       <% end %>
      </div>
	</div><!--col-->
	<div class="col m9">
		<div class="card blue-grey darken-1">
			<div class="card-image">
				<div id="wistia_<%= @video.wistia %>" style="height:387px;width:640px" data-video-width="640" data-video-height="360">
				  this is displayed if javascript is disabled
				</div>
			</div>
            <div class="card-content white-text">
              <span class="card-title"><%= @video.title %></span>
              <p><%= @video.description %></p>
            </div>
            <div class="card-action">
              <a href="#">Previous</a>
              <div class="right">
              	<a href="#">Next</a>
              </div>
            </div>
          </div>
	</div>
</div>

<script src="http://fast.wistia.net/static/E-v1.js"></script>
<script>
	wistiaEmbed = Wistia.embed("<%= @video.wistia %>", {
	 videoQuality: "hd-only",
	 videoFoam: true
	});
</script>